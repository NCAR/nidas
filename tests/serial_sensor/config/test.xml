<project
    xmlns="http://www.eol.ucar.edu/nidas"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.eol.ucar.edu/nidas nidas.xsd"
    name="test"
    system="ISFF"
    config="./config/test.xml"
    version="$LastChangedRevision$">

    <site name="test" class="isff.GroundStation" suffix=".test">
       <server>
            <service class="XMLConfigService">
                <output>
                    <socket port="30010" type="mcaccept"/>
                </output>
            </service>
            <service class="RawSampleService">
                <input class="RawSampleInputStream">
                    <socket port="30010" type="mcaccept"/>
                </input>
                <processor class="SampleArchiver">
                    <output class="SampleOutputStream">
                        <fileset dir="tmp"
                            file="server_%Y%m%d_%H%M%S.dat"
                            length="0"/>
                    </output>
                </processor>
            </service>
        </server>

	<dsm rserialPort="30002" name="localhost" id="1">
	    <serialSensor class="DSMSerialSensor"
		baud="57600" parity="none" databits="8" stopbits="1"
		devicename="tmp/test0" id="10" suffix=".t1">
		<sample id="1"
		    scanfFormat="%f %f">
		    <variable name="test1" units="wacka-a-mole"/>
		    <variable name="test2" units="wacka-a-mole"/>
		</sample>
		<message separator="\n" position="end" length="3"/>
	    </serialSensor>

	    <serialSensor class="DSMSerialSensor"
		baud="57600" parity="none" databits="8" stopbits="1"
		devicename="tmp/test1" id="20" suffix=".t2">
		<sample id="1"
		    scanfFormat="\e%f %f">
		    <variable name="test1" units="wacka-a-mole"/>
		    <variable name="test2" units="wacka-a-mole"/>
		</sample>
		<message separator="\e" position="beg" length="3"/>
	    </serialSensor>

            <serialSensor class="isff.CSAT3_Sonic"
                baud="9600" parity="none" databits="8" stopbits="1"
                devicename="tmp/test2" id="30" suffix=".t3" timeout="5">
                <sample id="1" rate="60">
                    <variable name="test1" units="m/s"/>
                    <variable name="v" units="m/s"/>
                    <variable name="w" units="m/s"/>
                    <variable name="tc" units="degC"/>
                    <variable name="diag" units=""/>
                    <variable name="spd" units="m/s"/>
                    <variable name="dir" units="deg"/>
                    <variable name="uflag" units=""/>
                    <variable name="vflag" units=""/>
                    <variable name="wflag" units=""/>
                    <variable name="tcflag" units=""/>
                </sample>
                <message separator="\x55\xaa" position="end" length="10"/>
            </serialSensor>

	    <serialSensor class="DSMSerialSensor"
		baud="57600" parity="none" databits="8" stopbits="1"
		devicename="tmp/test3" id="40" suffix=".t4">
		<sample id="1"
		    scanfFormat="%f %f">
		    <variable name="test1" units="wacka-a-mole"/>
		    <variable name="test2" units="wacka-a-mole"/>
		</sample>
		<message separator="xxy" position="end" length="0"/>
	    </serialSensor>

	    <serialSensor class="DSMSerialSensor"
		baud="57600" parity="none" databits="8" stopbits="1"
		devicename="tmp/test4" id="50" suffix=".t5">
		<sample id="1"
		    scanfFormat="xxy%f %f">
		    <variable name="test1" units="wacka-a-mole"/>
		    <variable name="test2" units="wacka-a-mole"/>
		</sample>
		<message separator="xxy" position="beg" length="0"/>
	    </serialSensor>

	    <serialSensor class="DSMSerialSensor"
		baud="57600" parity="none" databits="8" stopbits="1"
		devicename="tmp/test5" id="60" suffix=".t6">
		<sample id="1"
		    scanfFormat="%f">
		    <variable name="test1" units="wacka-a-mole"/>
		</sample>
		<message separator="\n" position="end" length="0"/>
                <prompt string="hello\n" rate="1"/>
	    </serialSensor>

            <output class="RawSampleOutputStream" sorterLength="10000">
                <fileset dir="tmp"
                    file="${DSM}_%Y%m%d_%H%M%S.dat"
                    length="0">
                </fileset>
            </output>
            <output class="RawSampleOutputStream" sorterLength="0">
                <socket port="30010" type="mcrequest"/>
            </output>
	</dsm>
    </site>

</project>

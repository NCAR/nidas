# -*- python -*-

##
##  Import the cross-build environment.
##

# -D__cpluscplus   -fno-common  -fno-builtin
Import('arm_env')
src_arm_env = arm_env.Copy()

##
##  List the ARM specific libraries
##
src_arm_env['LIBS'] = Split("""
  libArmDsm.a
  libArmDisc.a
""")

##
##  Build dsmAsync, dsmSync, dsmComm
##
apps = Split("""
  dsmAsync.cc
  ck_init_modules.cc
  ckrtl_com8.cc
""")

for i in apps:
  src_arm_env.Program( i )

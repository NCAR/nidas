##
##  Import the cross-build environment.
##
Import('env')
myenv = env.Copy()

# -D__cpluscplus   -fno-common  -fno-builtin
# Import('arm_env')
# src_arm_env = arm_env.Copy()

myenv.AppendUnique(CPPPATH = Split("""
      #dsm/class
      #dsm/modules
    """))

myenv.AppendUnique(LIBS = Split("""
      Dsm
      isa
      xerces-c
      pthread
      dl
    """))

apps = Split("""
  dsm_server.cc
  dsm.cc
  serial_test.cc
  sensor_test.cc
  ck_selector.cc
  ck_serial.cc
  ck_config.cc
  sample_test.cc
  file_stats.cc
  status_listener.cc
""")

for i in apps:
  myenv.Program( i )

# -*- python -*-

##
##  Import the cross-build environment.
##

Import('env')
myenv = env.Copy()

##
##  List the source files compiled into the libDsm.a library.
##
#  Climet.cc
#  Dpres.cc
#  Neph.cc
#  SampleTable.cc
#  SerialTable.cc
#  SyncRecord.cc

sources = Split("""
  DSMSensor.cc
  RTL_DevIoctl.cc
  RTL_DevIoctlStore.cc
  RTL_DSMSensor.cc
  DSMSerialSensor.cc
  Sample.cc
  SampleSource.cc
  PortSelector.cc
  PortSelectorTest.cc
  RemoteSerialConnection.cc
  RemoteSerialListener.cc
  TestSampleClient.cc
  SampleScanf.cc
""")

## myenv['LEXCOM'] = '$LEX $LEXFLAGS -t $SOURCES > $TARGET'

## myenv['LEXFLAGS'] = Split("""
##     -Pscanf_fmt_yy -+
## """)

myenv.CXXFile(target='SampleScanf.cc',source='SampleScanf.ll')

##
##  Build the libArmDsm.a library.
##
myenv.StaticLibrary('Dsm' , sources)

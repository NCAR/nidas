#ifndef DSM_VERSION_H
#define DSM_VERSION_H

namespace dsm {

/**
 * Class of static member functions providing version string.
 * This file is passed through a sed script to generate Version.h:
 * using the svnversion command (part of Subversion):
 * @code
	'sed -e "s/SOFTWARE_VERSION/`svnversion .`/" < $SOURCE > $TARGET')
 * @endcode
 */
class Version
{
public:
    static const char* getSoftwareVersion() { return "SOFTWARE_VERSION"; }
    static const char* getArchiveVersion() { return "0"; }
};

}

#endif

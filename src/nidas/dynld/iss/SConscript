Import('env')
arch = env['ARCH']

so = env.SharedLibrary ("nidas_dynld_iss_TiltSensor",
                        source = "TiltSensor.cc",
                        CPPDEFINES = 'DEBUG',
                        SHLIBPREFIX = '',LIBS=[])

headers = Split("""TiltSensor.h""")

env.Install('$PREFIX/lib', so)

# env.Clean(arch + '_install',[
#     (('$PREFIX/lib/' + os.path.basename(File(l).path)) for l in so)
#     ])
env.Clean('install',[
    (('$PREFIX/lib/' + os.path.basename(File(l).path)) for l in so)
    ])

env.Install('$PREFIX/include/nidas/dynld/iss', headers)


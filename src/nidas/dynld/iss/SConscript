Import('env')
arch = env['ARCH']

so = []

so.extend(env.SharedLibrary ("nidas_dynld_iss_TiltSensor",
                             source = "TiltSensor.cc",
                             CPPDEFINES = 'DEBUG',
                             SHLIBPREFIX = '',LIBS=[]))

so.extend(env.SharedLibrary ("nidas_dynld_iss_WxtSensor",
                             source = "WxtSensor.cc",
                             CPPDEFINES = 'DEBUG',
                             SHLIBPREFIX = '',LIBS=[]))

headers = Split("""TiltSensor.h WxtSensor.h""")

env.Install('$PREFIX/lib', so)

# env.Clean(arch + '_install',[
#     (('$PREFIX/lib/' + os.path.basename(File(l).path)) for l in so)
#     ])
env.Clean('install',[
    (('$PREFIX/lib/' + os.path.basename(File(l).path)) for l in so)
    ])

env.Install('$PREFIX/include/nidas/dynld/iss', headers)


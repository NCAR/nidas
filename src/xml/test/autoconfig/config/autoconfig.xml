<project
    xmlns="http://www.eol.ucar.edu/nidas"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    name="AutoConfig"
    system="ISFS"
    version="$Revision: 4555 $">

    <xi:include href="file:///home/daq/isfs/projects/AutoConfig/ISFS/config/sensor_catalog.xml" parse="xml">
        <xi:fallback>
            <!-- When your sensor_catalog.xml fails with little to no indication from xerces, 
                 copy and paste it here to debug it -->
        </xi:fallback>
    </xi:include>

    <dsmcatalog>
        <!-- Bare Pi DSM for autoconfig testing -->
        <dsm ID="BASEPI" rserialPort="30002">
            <output class="RawSampleOutputStream">
                <fileset dir="/media/usbdisk/projects/${PROJECT}/raw_data"
                        file="BASEPI_%Y%m%d_%H%M%S.dat"
                        length="43200">
                <mount dir="/media/usbdisk"/>
                </fileset>
            </output>
        </dsm>
    </dsmcatalog>

    <site name="nanolab-01" class="isff.GroundStation" suffix=".lab">
        <dsm 
            IDREF="BASEPI" 
            name="nanolab-01" 
            id="1">
            <serialSensor 
                IDREF="PTB210_AUTO_0" 
                devicename="/dev/ttyUSB0" 
                height="2m" 
                id="1" />
        </dsm>
    </site>
</project>

# -*- python -*-

Import('env')
env = env.Clone()

# Set LD_LIBRARY_PATH to the locally build libraries.
#
libs = [env.GetGlobalTarget('LIBNIDAS_UTIL'),
        env.GetGlobalTarget('LIBNIDAS'),
        env.GetGlobalTarget('LIBNIDAS_DYNLD')]

ldlibdirs = [ l.Dir('').abspath for l in env.File(libs) ]

env['ENV']['LD_LIBRARY_PATH'] = ":".join(ldlibdirs)

ck_xml = env.GetGlobalTarget('NIDAS_APPS_ck_xml')

path = env.subst("${TARGET.dir}", target=ck_xml)
env.PrependENVPath('PATH', path)
# print 'path=' + path
# env.PrependENVPath('PATH', env.Dir('#/build_x86/build_apps').abspath)

depends = ["run_test.sh",ck_xml]
runtest = env.Command("xtest1", depends, ["cd $SOURCE.dir && ./run_test.sh"])

env.Precious(runtest)
env.AlwaysBuild(runtest)
env.Alias('test', runtest)

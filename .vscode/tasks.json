{
        "version": "2.0.0",
        "tasks": [
                {
                        "label": "scons",
                        "type": "process",
                        "command": "scons",
                        "args": [
                                "-C",
                                "${workspaceFolder}/src",
                                "-u",
                                "-j",
                                "4"
                        ],
                        "group": {
                                "kind": "build",
                                "isDefault": false
                        },
                        "problemMatcher": [
                                {
                                        "base": "$gcc",
                                        "fileLocation": [
                                                "relative",
                                                "${workspaceFolder}/src"
                                        ]
                                }
                        ]
                },
                {

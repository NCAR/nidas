#
# Changes to system device permissions which are
# useful for NIDAS data acquisition
#
# world read/write access to /dev/ttyS*, ttyUSB*, and ttyD*
# I suppose if there is a login service running on one of these
# serial ports that this is a (small) security hole, but
# that is not common.
KERNEL=="tty[A-Z]*",            GROUP="uucp", MODE="0666"
#
# world read/write access to USB 2D probes via nidas usbtwod driver
KERNEL=="usbtwod*",          MODE="0666"
#
# Bluetooth rfcomm devices
KERNEL=="rfcomm[0-9]*",          MODE="0666"

# Viper digital I/O
KERNEL=="viper_dio[0-9]", MODE="0666"

# Diamond Emerald serial boards
KERNEL=="emerald[0-9]", MODE="0666"

# Diamond DMM-AT a2d, cntr d2a and d2d
KERNEL=="dmmat_*[0-9]", MODE="0666"

# Diamond IR104 relay
KERNEL=="ir104_[0-9]", MODE="0666"

# Diamond GPIO-MM
KERNEL=="gpiomm_*[0-9]", MODE="0666"

# PC104SG IRIG
KERNEL=="irig[0-9]", MODE="0666"

# Condor ARINC
KERNEL=="arinc[0-9]", MODE="0666"

# NCAR A2D
KERNEL=="ncar_a2d[0-9]", MODE="0666"

# Mesa Anything I/O
KERNEL=="mesa[0-9]", MODE="0666"
